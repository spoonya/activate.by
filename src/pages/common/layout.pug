doctype html
html(lang="ru")
  block head
    head
      meta(charset="utf-8")
      meta(name="description" content="Приобрести лицензионные ключи активации")
      meta(content="width=device-width, initial-scale=1" name="viewport")
      meta(content="ie=edge" http-equiv="x-ua-compatible")

      link(rel='apple-touch-icon' sizes='144x144' href='favicon/apple-touch-icon.png')
      link(rel='icon' type='image/png' sizes='32x32' href='favicon/favicon-32x32.png')
      link(rel='icon' type='image/png' sizes='16x16' href='favicon/favicon-16x16.png')
      link(rel='manifest' href='favicon/site.webmanifest')
      link(rel='mask-icon' href='favicon/safari-pinned-tab.svg' color='#5bbad5')
      meta(name='msapplication-TileColor' content='#da532c')
      meta(name='theme-color' content='#ffffff')

      link(rel="preconnect" href="https://fonts.googleapis.com")
      link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
      link(href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;500&display=swap" rel="stylesheet")

      link(rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css")
      script(src="https://unpkg.com/swiper@7/swiper-bundle.min.js")

      script(src="https://cdn.jsdelivr.net/gh/cferdinandi/tabby@12/dist/js/tabby.polyfills.min.js")

      link(rel="stylesheet" href="css/style.min.css")

      block title
        title Activate.by
  body
    include ../includes/common/mixins
    block header
      include header
    .page
      block content
      block footer
        include footer
    +cart
    #overlay.overlay
    block scripts
      script(src='scripts/main.min.js')
